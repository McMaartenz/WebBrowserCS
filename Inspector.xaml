<Window x:Class="WebBrowser.Inspector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebBrowser"
        mc:Ignorable="d"
        Title="Inspector" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Console">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="48"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel x:Name="ConsoleHistory" Grid.Row="0" />
                    <TextBox Grid.Row="1" TextWrapping="Wrap" />
                </Grid>
            </TabItem>
            <TabItem Header="Network">
                <Grid Background="#FFE5E5E5">
                    <StackPanel x:Name="NetworkHistory" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
